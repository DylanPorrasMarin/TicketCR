@{

    Layout = "";
}


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>TicketCR</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <!-- Favicons -->
    <link href="~/ticketCR/Img/shared/favicon.png" rel="icon">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    <!-- Template Main CSS File -->
    <link href="~/ticketCR/css/escenario/escenario1.css" rel="stylesheet" asp-append-version="true">


</head>

<body>


    <div class="modal fade" id="modalEscenario1" tabindex="-1" aria-labelledby="modalEscenarioLabel1" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">


   <div class="stage-wrapper">

                    <h2 class="stage-title">Escenario 1</h2>

     
  
      <ul class="showcase">
        <li>
          <div class="seat"></div>
          <small>Disponibles</small>
        </li>
        <li>
          <div class="seat selected" id="selectedSeatHelper"></div>
          <small>Seleccionados</small>
        </li>
     @*    <li>
          <div class="seat sold"></div>
          <small>Vendidos</small>
        </li> *@
      </ul>
  
        <div class="stage-container">
          <div class="row">
                 <label>Selector de tipo de Boleto:</label>
        <select id="ticketTypeSelect">
          <option value="particular">Boleto Particular</option>
          <option value="estudiante">Boleto Estudiante</option>
          <option value="adulto">Boleto Adulto Mayor</option>
          <option value="regalia">Boleto Regalia</option>
        </select>
          </div>
   
<div class="input-rows-container">
  
          <label>Número de filas:</label>
          <input id="numOfRows" type="number" min="1">
          <label>Número de asientos por fila:</label>
            <input id="numOfSeats" type="number" min="1" max="9">
</div>


        <div class="create-button-container">
          <button id="createSeats" class="sign-btn">Crear asientos</button>
          <button id="clear-seats" class="sign-btn">Borrar Asientos Seleccionados</button>
        </div>

      </div>
  
      <div class="screen-container">
        <div class="screen">
         <div class="screen-text-container">
           <p>Evento</p>
         </div>
        </div>

        <div id="seatsContainer"></div>
       
      </div>
  
      <p class="text">
        Has seleccionado <span id="count">0</span> asientos por un precio de: <span
          id="total"
          >0</span
        >
      </p>

                    <div style="text-align: right; margin-bottom:10px;">
                        <button type="button" class="close-modal-button sign-btn" id="close-modal-button" data-bs-dismiss="modal">Cerrar</button>
                    </div>
    </div>


            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/ticketCR/js/alertas.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="~/ticketCR/js/escenario/escenario1.js" asp-append-version="true"></script>

</body>

</html>


