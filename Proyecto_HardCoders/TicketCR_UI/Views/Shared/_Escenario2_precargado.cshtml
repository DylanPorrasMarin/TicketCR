@{

    Layout = "";
}


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>TicketCR</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <!-- Favicons -->
    <link href="~/ticketCR/Img/shared/favicon.png" rel="icon">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    <!-- Template Main CSS File -->
    <link href="~/ticketCR/css/escenario/escenario2.css" rel="stylesheet" asp-append-version="true">


</head>

<body>


    <div class="modal fade" id="modalEscenario2-precargado" tabindex="-1" aria-labelledby="modalEscenarioLabel2" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <div class="stage-wrapper">
                    <h2 class="stage-title">Escenario 2</h2>


                    <div class="dropzone top-left" id="top-left"></div>
                    <div class="dropzone top-right" id="top-right"></div>
                    <div class="dropzone bottom-left" id="bottom-left"></div>
                    <div class="dropzone bottom-right" id="bottom-right"></div>


                    <ul class="showcase">
                        <li>
                            <div class="seat"></div>
                            <small>Disponibles</small>
                        </li>
                        <li>
                            <div class="seat selected" id="esc2_selectedSeatHelper"></div>
                            <small>Seleccionados</small>
                        </li>
                         <li>
                        <div class="seat sold"></div>
                        <small>Vendidos</small>
                        </li>
                    </ul>

                    <div class="controls-container stage-container">


                        <div class="ticket-selector">

                            <label>Selector de tipo de Boleto:</label>
                            <select id="esc2_ticketTypeSelect">
                                <option value="particular">Boleto Particular</option>
                                <option value="estudiante">Boleto Estudiante</option>
                                <option value="adulto">Boleto Adulto Mayor</option>
                                <option value="regalia">Boleto Regalia</option>
                            </select>
                        </div>

                        <div class="input-rows-container" style="display:none;opacity:0;">

                            <label>Número de filas:</label>
                            <input id="esc2_numOfRows" type="number" min="1" max="200">
                            <label>Número de asientos por fila:</label>
                            <input id="esc2_numOfSeats" type="number" min="1" max="9">
                        </div>

                        <div class="create-button-container">
                            <button id="esc2_createSeats" class="sign-btn" style="display:none">Crear asientos</button>
                            <button id="esc2_clear-seats" class="sign-btn" style="display:none">Borrar Asientos Seleccionados</button>
                            <button id="esc2_reset-seats" class="sign-btn mt-2 mb-2" style="display:none">Reiniciar Posición de Asientos</button>
                        </div>

                    </div>

                    <div class="esc2_screen-container">
                        <div class="screen">
                            <div class="screen-text-container">
                                <p>@Model.Nombre</p>
                            </div>
                        </div>


                    </div>
                    <div id="esc2_seatsContainer" class="seatsContainerClass"></div>

                    <p class="text">
                        Has seleccionado <span id="esc2_count">0</span> asientos por un precio de: <span id="esc2_total">0</span>
                    </p>

                    <div style="text-align: right; margin-bottom:10px;">
                        <button type="button" class="close-modal-button sign-btn" id="close-modal-button2" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>


            </div>
        </div>
    </div>
    <script>

        function decodeHtmlEntities2(str) {
            var textArea = document.createElement('textarea');
            textArea.innerHTML = str;
            return textArea.value;
        }

        let infoPlantillasPayload2 = '@Model.InfoPlantilla';
        let decodedString2 = decodeHtmlEntities2(infoPlantillasPayload2);
        let infoPlantilla2 = JSON.parse(decodedString2);

    </script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/ticketCR/js/alertas.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="~/ticketCR/js/escenario/escenario2-precargado.js" asp-append-version="true"></script>

</body>

</html>


