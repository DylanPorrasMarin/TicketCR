@{
	Layout = "";

}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<link href="~/ticketCR/Img/shared/favicon.png" rel="icon">
	<title>Validación de cuenta</title>
	<link href="~/ticketCR/css/recuperarClave/restablecerClave.css" rel="stylesheet" />
	<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
	<div class="card login-form">
		<div class="card-body">
			<div class="background-degradado">
				<h2 class="card-title text-center">Validación de cuenta</h2>
				<div class="image-container">
					<img src="~/ticketCR/Img/shared/logoTicketCR.png" alt="Logo TicketCR">
				</div>
				<form id="validar">
					<div class="text-center card-text">
						<div>
							<p> Bienvenido a nuestra plataforma. </p>
							<p> Dale click a activar si deseas proceder con la activación de tu cuenta.</p>
						</div>
						
							<div class=" text-center">
								<button type="submit" class="sign-btn">Activar</button>
							</div>

						</div>
                </form>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/ticketCR/js/alertas.js"></script>
	<script src="~/ticketCR/js/site.js"></script>
	<script src="~/ticketCR/js/validacionCuenta/validacionCuenta.js"></script>
	<script src="~/ticketCR/js/recuperarClave/restablecerClave.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
